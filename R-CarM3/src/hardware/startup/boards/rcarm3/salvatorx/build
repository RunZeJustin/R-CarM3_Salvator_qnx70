/lib/dll/pci/pci_server-buscfg-generic.so=${QNX_TARGET}/aarch64le/lib/dll/pci/pci_server-buscfg-generic.so
/lib/dll/pci/pci_slog.so=${QNX_TARGET}/aarch64le/lib/dll/pci/pci_slog.so
